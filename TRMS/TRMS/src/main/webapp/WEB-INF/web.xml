<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Tuition Reimbursement Management System (TRMS)</display-name>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EmployeeHomeServlet</servlet-name>
		<servlet-class>servlets.EmployeeHomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ManagementHomeServlet</servlet-name>
		<servlet-class>servlets.ManagementHomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BenefitsCoordinatorHomeServlet</servlet-name>
		<servlet-class>servlets.BenefitsCoordinatorHomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReimbursementServlet</servlet-name>
		<servlet-class>servlets.ReimbursementServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EmployeeHomeServlet</servlet-name>
		<url-pattern>/EmployeeHomeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagementHomeServlet</servlet-name>
		<url-pattern>/ManagementHomeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BenefitsCoordinatorHomeServlet</servlet-name>
		<url-pattern>/BenefitsCoordinatorHomeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReimbursementServlet</servlet-name>
		<url-pattern>/ReimbursementServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

</web-app>
